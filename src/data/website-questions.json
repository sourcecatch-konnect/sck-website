      "required": true,
      "options": [
        { "label": "üèóÔ∏è Construction / Contractor", "value": "construction" },
        { "label": "üíá Beauty Parlour / Salon", "value": "beauty" },
        { "label": "üçΩÔ∏è Restaurant / Cafe", "value": "restaurant" },
